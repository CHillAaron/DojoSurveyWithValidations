@model Dojo;
@{
    ViewData["Title"] = "Home Page";
}

<form action="Result" method="post" class="col-5">
    <h2 class="text-center">Login</h2>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
            <select asp-for="Location">
                <option value="Seattle">Seattle</option>
                <option value="Portland">Portland</option>
                <option value="San Jose">San Jose</option>
            </select>
        <label asp-for="Language"></label>
        <select asp-for="Language">
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
        </select>
        <div>
            <span asp-validation-for="Comment"></span>
            <label class="uk-form-label" asp-for="Comment"></label>
            <textarea asp-for="Comment" class="uk-textarea uk-form-width-medium" rows="3"></textarea>
        </div>
    </div>
    <input type="submit" value="Submit" class="btn btn-success" />
</form>